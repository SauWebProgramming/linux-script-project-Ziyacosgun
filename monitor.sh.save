CPU=$(top -bn1 | grep "Cpu(s)" | awk '{print 100 - $8"%"}#!/bin/bash

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# 1. Degiskenleri Al [cite: 18, 19, 20, 21, 22]
TARIH=$(date "+%d/%m/%Y %H:%M:%S")
CPU=$(top -bn1 | grep "Cpu(s)" | awk '{print $2 + $4"%"}')
RAM=$(free -m | awk 'NR==2{printf "%sMB / %sMB", $3, $2}')
DISK=$(df -h / | awk 'NR==2{printf "%s / %s", $3, $2}')
USER_COUNT=$(who | wc -l)

# 2. HTML ve CSS Olusturma [cite: 23, 56, 60]
cat <<EOF > /var/www/html/index.html
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sistem Dashboard</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #1a1a2e; color: #fff; display: flex; justify-content: center; padding-top: 50px; }
        .card { background-color: #16213e; padding: 30px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.5); width: 80%; max-width: 600px; border: 1px solid #0f3460; }
        h1 { text-align: center; color: #e94560; margin-bottom: 25px; text-transform: uppercase; letter-spacing: 2px; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 15px; text-align: left; border-bottom: 1px solid #0f3460; }
        th { color: #e94560; font-weight: bold; width: 40%; }
        td { color: #cfd2d6; }
        .footer { text-align: center; margin-top: 20px; font-size: 12px; color: #533483; }
    </style>
</head>
<body>
    <div class="card">
        <h1>Sunucu Durum Paneli</h1>
        <table>
            <tr>
                <th>Rapor Saati</th>
                <td>$TARIH</td>
            </tr>
            <tr>
                <th>CPU Kullanimi</th>
                <td>$CPU</td>
            </tr>
            <tr>
                <th>RAM Durumu</th>
                <td>$RAM</td>
            </tr>
            <tr>
                <th>Disk Dolulugu</th>
                <td>$DISK</td>
            </tr>
            <tr>
                <th>Aktif Kullanici</th>
                <td>$USER_COUNT</td>
            </tr>
        </table>
        <div class="footer">Otomatik Guncelleme Sistemi Aktif</div>
    </div>
</body>
</html>
EOF
